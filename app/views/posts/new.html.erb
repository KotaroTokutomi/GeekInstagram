<h1>GeekInstagram</h1>
<h3>新規投稿</h3>

<%= form_for @post do |f| %>

  <div class="field">
    <%= f.label :タイトル %>
    <%= f.text_field :body, class:"form-control col-md-4" %>
  </div>

  <div class="field">
    <%= f.label :画像を選択 %>
    <%= f.file_field :image, class:"btn btn-outline-light" %>
  </div>

  <%= f.submit "投稿する", class:"btn btn-outline-info" %>

<% end %>

<%= link_to "投稿一覧へ", posts_path %>

